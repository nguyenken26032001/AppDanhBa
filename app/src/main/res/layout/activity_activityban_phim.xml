<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitybanPhim">

    <TextView
        android:id="@+id/text_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="40dp"
        android:textColor="#111"
        android:textSize="25dp" />

    <TextView

        android:layout_marginLeft="150dp"
        android:id="@+id/addNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Thêm số"
        android:textColor="#2196F3"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="390dp"
        android:layout_below="@id/text_number"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_main"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="1"
                android:textColor="#111"
                android:textSize="27sp" />
            <Button
                android:id="@+id/hai"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="2"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/ba"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="3"
                android:textColor="#111"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="4"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/nam"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="5"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/sau"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="6"
                android:textColor="#111"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="7"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/tam"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="8"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/chin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="9"
                android:textColor="#111"
                android:textSize="27sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sao"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="*"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/khong"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="0"
                android:textColor="#111"
                android:textSize="27sp" />

            <Button
                android:id="@+id/thang"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/custombutton"
                android:text="#"
                android:textColor="#111"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/call"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_button_call"
                android:drawableStart="@drawable/call"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="75dp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:drawableStart="@drawable/cancle"
                android:text="delete"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:layout_marginTop="20dp"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>